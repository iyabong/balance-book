<Project>
  <PropertyGroup>
    <DeleteExistingFiles>true</DeleteExistingFiles>
    <ExcludeApp_Data>false</ExcludeApp_Data>
    <LaunchSiteAfterPublish>true</LaunchSiteAfterPublish>
    <LastUsedBuildConfiguration>Release</LastUsedBuildConfiguration>
    <LastUsedPlatform>Any CPU</LastUsedPlatform>
    <PublishProvider>FileSystem</PublishProvider>
    <PublishUrl>bin\Release\net9.0\browser-wasm\publish\</PublishUrl>
    <WebPublishMethod>FileSystem</WebPublishMethod>
    <_TargetId>Folder</_TargetId>
    <SiteUrlToLaunchAfterPublish />
    <TargetFramework>net9.0</TargetFramework>
    <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    <ProjectGuid>232ab857-9c6d-45de-9882-734ccb91b598</ProjectGuid>
    <SelfContained>true</SelfContained>
  </PropertyGroup>
  <!--<Target Name="CopyToFrontend" AfterTargets="Publish">
    <MakeDir Directories="$(SolutionDir)frontend\public\resume" Condition="!Exists('$(SolutionDir)frontend\public\resume')" />
    <Exec Command="robocopy &quot;$(PublishDir)wwwroot\.&quot; &quot;$(SolutionDir)frontend\public&quot; /MIR /NFL /NDL /NJH /NJS" IgnoreExitCode="true" />
  </Target>-->
	<Target Name="CopyToFrontend" AfterTargets="Publish">
		<PropertyGroup>
			<_Dest>$(SolutionDir)frontend\public\resume\</_Dest>
		</PropertyGroup>

		<MakeDir Directories="$(_Dest)" Condition="!Exists('$(_Dest)')" />

		<!-- 1) Blazor Publish가 wwwroot\resume 구조일 때 (StaticWebAssetBasePath=resume) -->
		<Exec Condition="Exists('$(PublishDir)wwwroot\resume\index.html')"
			  Command='robocopy "$(PublishDir)wwwroot\resume\." "$(_Dest)." /E /NFL /NDL /NJH /NJS'
			  IgnoreExitCode="true" />

		<!-- 2) 일반 wwwroot 루트 구조일 때(백업 경로) -->
		<Exec Condition="!Exists('$(PublishDir)wwwroot\resume\index.html')"
			  Command='robocopy "$(PublishDir)wwwroot\." "$(_Dest)." /E /NFL /NDL /NJH /NJS'
			  IgnoreExitCode="true" />
	</Target>
</Project>